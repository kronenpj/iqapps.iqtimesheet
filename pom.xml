<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.googlecode.iqapps</groupId>
	<artifactId>IQTimeSheet-parent</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>IQTimeSheet - Parent</name>

	<scm>
		<url>https://code.google.com/p/iqapps.iqtimesheet</url>
		<connection>scm:git:https://code.google.com/p/iqapps.iqtimesheet</connection>  
		<developerConnection>scm:git:https://code.google.com/p/iqapps.iqtimesheet</developerConnection>
	</scm>

	<licenses>
		<license>
			<name>Apache License Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<email>kronenpj@gmail.com</email>
			<name>Paul Kronenwetter</name>
			<url>https://code.google.com/p/iqapps</url>
			<id>kronenpj</id>
		</developer>
	</developers>

	<modules>
		<module>IQTimeSheet</module>
		<module>IQTimeSheet-it</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--
		<platform.version>4.1.1.4</platform.version>
		-->
		<platform.version>2.3.3</platform.version>
		<android.plugin.version>3.6.0</android.plugin.version>
		<actionBarSherlock.version>4.2.0</actionBarSherlock.version>
		<roboguice.version>2.0</roboguice.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.android</groupId>
				<artifactId>android</artifactId>
				<version>${platform.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>com.google.android</groupId>
				<artifactId>android-test</artifactId>
				<version>${platform.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>android.support</groupId>
				<artifactId>compatibility-v4</artifactId>
				<type>jar</type>
				<version>r13</version>
			</dependency>
			<dependency>
				<groupId>com.actionbarsherlock</groupId>
				<artifactId>actionbarsherlock</artifactId>
				<version>${actionBarSherlock.version}</version>
				<type>apklib</type>
				<exclusions>
					<exclusion>
						<groupId>android.support</groupId>
						<artifactId>compatibility-v4</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.roboguice</groupId>
				<artifactId>roboguice</artifactId>
				<version>${roboguice.version}</version>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.11</version>
				<scope>provided</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.jayway.maven.plugins.android.generation2</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>${android.plugin.version}</version>
					<configuration>
						<sdk>
							<platform>16</platform>
						</sdk> 
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
